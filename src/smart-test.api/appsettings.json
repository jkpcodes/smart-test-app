{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200"
    ]
  },
  "ConnectionStrings": {
    "AuthConnectionString": "Host=localhost;Database=smart_test_auth;Username=admin;Password=password;Port=5432",
    "MongoDbConnectionString": "mongodb://localhost:27017/smart_test",
    "MongoDbUser": "MONGO_INITDB_ROOT_USERNAME=admin",
    "MongoDbPassword": "MONGO_INITDB_ROOT_PASSWORD=password"
  },
  "JwtSettings": {
    "Secret": "your-256-bit-secret-key-min-32-chars-required-for-hmacsha256",
    "Issuer": "SmartTest.Auth",
    "Audience": "SmartTest.Client",
    "TokenExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "AllowedHosts": "*"
}
